svg.loading
  display: block
  position: absolute
  color: var(--text-color)
  z-index: -1
  width: 100%
  height: 2rem
  margin: auto
  animation: spin infinite 2s
  animation-timing-function: linear
  @keyframes spin
    from
      transform:rotate(0deg)
    to
      transform:rotate(360deg)

.loading-wrap
  margin: 0
  text-align: center
  border-radius: 16px
  position relative
  padding: 2rem
  svg  
    margin: 4px
  &:after 
    content: "正在加载"
    color: var(--text-color)
    display: block
    font-size: 14px
  &.error
    &:after
      content: "加载失败，请稍后重试。"